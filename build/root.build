cxx.std = experimental

using cxx

mxx{*}: extension = mxx
hxx{*}: extension = hxx
ixx{*}: extension = ixx
txx{*}: extension = txx
cxx{*}: extension = cxx

# All exe{} in tests/ are, well, tests.
#
tests/exe{*}: test = true

# Specify the test target for cross-testing.
#
test.target = $cxx.target
