cxx.std = experimental
cxx.features.modules = ($force_modules == true)

using cxx

if ($force_modules == true && !$cxx.features.modules)
  fail 'c++ compiler does not support modules'

mxx{*}: extension = mxx
hxx{*}: extension = hxx
ixx{*}: extension = ixx
txx{*}: extension = txx
cxx{*}: extension = cxx
