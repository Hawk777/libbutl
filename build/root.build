using cxx.guess

if ($force_modules != true && $cxx.id == 'clang')
  cxx.features.modules = false

cxx.std = experimental

using cxx

mxx{*}: extension = mxx
hxx{*}: extension = hxx
ixx{*}: extension = ixx
txx{*}: extension = txx
cxx{*}: extension = cxx
